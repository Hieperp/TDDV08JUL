                    columns.Bound(p => p.MoldCode).DisplayNameTitle().Filterable(false).Width(200).EditorTemplateName(Model.MaterialIssueTypeID == (int)GlobalEnums.MaterialIssueTypeID.PlannedOrder ? "StringReadonly" : "AutoCompletes/MoldAvailable")
                        .ClientTemplate("#= MoldCode #" + "<input type='hidden' name='MaterialIssueViewDetails[#= index(data) #].MoldCode' value='#= MoldCode #' />");
                    
                    
                    columns.Bound(p => p.ProductID).DisplayNameTitle().Filterable(false).Hidden()
                        .ClientTemplate("#= ProductID #" + "<input type='hidden' name='MaterialIssueViewDetails[#= index(data) #].ProductID' value='#= ProductID #' />");
                    columns.Bound(p => p.ProductName).DisplayNameTitle().Filterable(false).Width(90).HtmlAttributes(new { style = "" }).Hidden()
                        .ClientTemplate("#= ProductName #" + "<input type='hidden' name='MaterialIssueViewDetails[#= index(data) #].ProductName' value='#= ProductName #' />");
                    columns.Bound(p => p.ProductCode).DisplayNameTitle().Filterable(false).Width(200).EditorTemplateName(Model.MaterialIssueTypeID == (int)GlobalEnums.MaterialIssueTypeID.PlannedOrder ? "StringReadonly" : "AutoCompletes/ProductAvailable")
                        .ClientFooterTemplate("Tổng cộng (#= kendo.format('{0:n0}', count) # dòng)")
                        .ClientTemplate("#= ProductCode #" + "<input type='hidden' name='MaterialIssueViewDetails[#= index(data) #].ProductCode' value='#= ProductCode #' />");


                    columns.Bound(p => p.CommodityID).DisplayNameTitle().Filterable(false).Hidden()
                        .ClientTemplate("#= CommodityID #" + "<input type='hidden' name='MaterialIssueViewDetails[#= index(data) #].CommodityID' value='#= CommodityID #' />");
                    columns.Bound(p => p.CommodityName).DisplayNameTitle().Filterable(false).Width(90).HtmlAttributes(new { style = "" }).Hidden()
